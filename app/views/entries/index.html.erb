<h1>Welcome to your capsule </h1>
<br><br>
<%= link_to 'Create New Entry', new_entry_path %>
<br><br><br>
<div class="date_range">
  <%= form_tag(entries_path, method: "get") do %>
    <%= date_field(:from_date, :date) %>
    <%= submit_tag("Pick Date") %>
  <% end %>
</div>
<% @entries.each do |entry| %>
  <div>
      <p><%= entry.title %></p>
      <p><%= entry.content %></p>
      <p><%= entry.created_at.strftime("%b %d %Y") %></p>
  </div>
<% end %>
