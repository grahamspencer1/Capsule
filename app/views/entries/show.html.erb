<div class="single_entry_container">
  <h1><%= @entry.title %> </h1>
  <br><br>
  <p><%= @entry.content %> </p>
  <br>
  <p><%= @entry.created_at.strftime("%b %d %Y")%> </p>
  <br>
  <p>
    <%= link_to("Edit", "/entries/#{@entry.id}/edit") %>
    |
    <%= link_to("Delete", "/entries/#{@entry.id}", method: :delete, data: {:confirm => "Are you sure you want to delete this entry?"}) %>
  </p>
  <br><br>
  <button class="reward" onclick="goEntry(-1)">&#10094;</button>
  <button class="forward" onclick="goEntry(1)">&#10095;</button>

</div>
